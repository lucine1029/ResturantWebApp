@using RestaurantWebApp.Models
@model LoginViewModel

@{
    ViewData["Title"] = "Admin Login";
}

<div class="container d-flex align-items-center justify-content-center min-vh-100">
    <!-- Card -->
    <div class="card shadow-lg p-4 border-success" style="max-width: 400px; width: 100%;">

        <!-- Title -->
        <h3 class="text-center mb-4 fw-bold text-success">Admin Login</h3>

        <!-- Form -->
        <form asp-action="Login" method="post" novalidate>
            <div class="mb-3">
                <label asp-for="Username" class="form-label text-success"></label>
                <input asp-for="Username" class="form-control border-success" placeholder="Enter username" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Password" class="form-label text-success"></label>
                <input asp-for="Password" class="form-control border-success" placeholder="Enter password" autocomplete="off" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <!-- Green button -->
            <button type="submit" class="btn btn-success w-100 mt-3">Login</button>

            <div class="text-center mt-3">
                <a href="/" class="text-success text-decoration-none fw-semibold">← Back to Home</a>
            </div>
        </form>
    </div>
</div>

