@model RestaurantWebApp.Models.Menu

@{
    ViewData["Title"] = "Delete Dish";
}

<div class="container py-4">
    <h2 class="text-danger">
        <i class="fas fa-exclamation-triangle"></i> Delete Dish
    </h2>

    <!-- Warning Alert -->
    <div class="alert alert-danger" role="alert">
        <h4 class="alert-heading">Warning!</h4>
        <p class="mb-0">Are you sure you want to delete this dish? This action cannot be undone.</p>
    </div>

    <form asp-action="DeleteDishConfirmation" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="Id" />

        <div class="mb-3">
            <label asp-for="DishName" class="form-label"></label>
            <input asp-for="DishName" class="form-control bg-light" readonly />
        </div>

        <div class="mb-3">
            <label asp-for="Description" class="form-label"></label>
            <textarea asp-for="Description" class="form-control bg-light" readonly></textarea>
        </div>

        <div class="mb-3">
            <label asp-for="Price" class="form-label"></label>
            <input asp-for="Price" type="number" class="form-control bg-light" readonly />
        </div>

        <div class="form-check">
            <input asp-for="IsAvailable" class="form-check-input" type="checkbox" disabled />
            <label asp-for="IsAvailable" class="form-check-label"></label>
        </div>
        <div class="form-check">
            <input asp-for="IsVegan" class="form-check-input" type="checkbox" disabled />
            <label asp-for="IsVegan" class="form-check-label"></label>
        </div>
        <div class="form-check">
            <input asp-for="HasNuts" class="form-check-input" type="checkbox" disabled />
            <label asp-for="HasNuts" class="form-check-label"></label>
        </div>
        <div class="form-check">
            <input asp-for="HasEgg" class="form-check-input" type="checkbox" disabled />
            <label asp-for="HasEgg" class="form-check-label"></label>
        </div>
        <div class="form-check">
            <input asp-for="HasDairy" class="form-check-input" type="checkbox" disabled />
            <label asp-for="HasDairy" class="form-check-label"></label>
        </div>
        <div class="form-check">
            <input asp-for="IsSpicy" class="form-check-input" type="checkbox" disabled />
            <label asp-for="IsSpicy" class="form-check-label"></label>
        </div>
        <div class="form-check">
            <input asp-for="IsGlutenFree" class="form-check-input" type="checkbox" disabled />
            <label asp-for="IsGlutenFree" class="form-check-label"></label>
        </div>

        <div class="mt-3">
            <button type="submit" class="btn btn-danger">
                <i class="fas fa-trash"></i> Confirm Delete
            </button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>