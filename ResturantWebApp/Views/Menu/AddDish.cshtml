@using RestaurantWebApp.Models
@model DishViewModel

@{
    ViewData["Title"] = "Create New Dish";
}

<div class="container mt-5">
    <div class="card shadow-lg p-4">
        <h3 class="text-center mb-4 text-success fw-bold">
            <i class="fas fa-plus-circle me-2"></i> Create New Dish
        </h3>

        <form asp-action="AddDish" method="post" novalidate>
            <div class="mb-3">
                <label asp-for="DishName" class="form-label"></label>
                <input asp-for="DishName" class="form-control" placeholder="Enter dish name" />
                <span asp-validation-for="DishName" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Description" class="form-label"></label>
                <textarea asp-for="Description" class="form-control" rows="3" placeholder="Enter dish description"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Price" class="form-label"></label>
                <input asp-for="Price" class="form-control" type="number" placeholder="Enter price (kr)" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="ImageUrl" class="form-label"></label>
                <input asp-for="ImageUrl" class="form-control" placeholder="Enter image URL (optional)" />
            </div>

            <hr />

            <!-- Boolean fields with toggle icons -->
            <div class="row">
                @foreach (var boolField in new[]
                                {
                                new { Label = "Available", Field = nameof(Model.IsAvailable) },
                                new { Label = "Vegan", Field = nameof(Model.IsVegan) },
                                new { Label = "Has Nuts", Field = nameof(Model.HasNuts) },
                                new { Label = "Has Egg", Field = nameof(Model.HasEgg) },
                                new { Label = "Has Dairy", Field = nameof(Model.HasDairy) },
                                new { Label = "Spicy", Field = nameof(Model.IsSpicy) },
                                new { Label = "Gluten Free", Field = nameof(Model.IsGlutenFree) },
                                })
                {
                    <div class="col-md-4 mb-3 text-center">
                        <label class="form-label d-block fw-bold">@boolField.Label</label>
                        <input type="hidden" name="@boolField.Field" value="false" />
                        <button type="button" class="btn btn-outline-secondary toggle-btn" data-field="@boolField.Field">
                            <i class="fas fa-times text-danger"></i>
                        </button>
                    </div>
                }
            </div>

            <div class="text-center mt-4">

                <button type="submit" class="btn btn-success w-50">
                    
                    <i class="fas fa-save me-2"></i> Save Dish
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        document.querySelectorAll(".toggle-btn").forEach(btn => {
            btn.addEventListener("click", function () {
                const icon = this.querySelector("i");
                const fieldName = this.getAttribute("data-field");

                // Toggle true/false visually
                const isActive = icon.classList.contains("fa-check");
                if (isActive) {
                    icon.classList.remove("fa-check", "text-success");
                    icon.classList.add("fa-times", "text-danger");
                    this.closest("div").querySelector(`input[name="${fieldName}"]`).value = "false";
                } else {
                    icon.classList.remove("fa-times", "text-danger");
                    icon.classList.add("fa-check", "text-success");
                    this.closest("div").querySelector(`input[name="${fieldName}"]`).value = "true";
                }
            });
        });
    </script>
}




