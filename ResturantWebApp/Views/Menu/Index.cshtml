@using RestaurantWebApp.Models
@model List<Menu>

@{
	ViewData["Title"] = "Menu";
}


<div class="container">
    <h1 class="text-center mb-6 py-5">Our Menu</h1>
    
    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-info text-center">
            <p>No dishes available at the moment.</p>
        </div>
    }
    else
    {
        <div class="row justify-content-center">
            <div class="col-lg-8">
                @foreach (var item in Model)
                {
                    <div class="menu-item border-bottom pb-3 mb-3 @(!item.IsAvailable ? "text-muted" : "")">
                        <!-- Dish Name and Price -->
                        <div class="d-flex justify-content-between align-items-baseline">
                            <h5 class="mb-1">@item.DishName</h5>
                            <span class="h5 mb-1 text-primary">@item.Price.ToString("0.00") Kr</span>
                        </div>
                        
                        <!-- Description -->
                        <p class="mb-2">@item.Description</p>
                        
                        <!-- Tags -->
                        <div class="tags">
                            @if (item.IsVegan)
                            { <small class="text-success me-2">🌱 Vegan</small> }
                            @if (item.IsSpicy)
                            { <small class="text-danger me-2">🌶️ Spicy</small> }
                            @if (item.IsGlutenFree)
                            { <small class="text-info me-2">🌾 Gluten Free</small> }
                            @if (item.HasNuts)
                            { <small class="text-warning me-2">🥜 Nuts</small> }
                            @if (item.HasEgg)
                            { <small class="text-secondary me-2">🥚 Egg</small> }
                            @if (item.HasDairy)
                            { <small class="text-secondary me-2">🥛 Dairy</small> }
                        </div>
                        
                        @if (!item.IsAvailable)
                        {
                            <small class="text-danger">• Currently unavailable</small>
                        }
                    </div>
                }
            </div>
        </div>
    }
</div>

<style>
    .menu-item:last-child {
        border-bottom: none;
        margin-bottom: 0;
        padding-bottom: 0;
    }
    
    .tags small {
        font-weight: 500;
    }
</style>

<style>
    .card {
        transition: transform 0.2s;
        border: none;
    }
    
    .card:hover {
        transform: translateY(-5px);
        box-shadow: 0 8px 25px rgba(0,0,0,0.15) !important;
    }
    
    .card-img-top {
        border-bottom: 1px solid #eee;
    }
    
    .dietary-icons .badge {
        font-size: 0.8rem;
        cursor: help;
    }
    
    .opacity-50 {
        opacity: 0.5;
    }
</style>
