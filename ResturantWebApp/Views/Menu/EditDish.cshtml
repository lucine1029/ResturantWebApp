
@model RestaurantWebApp.Models.Menu

@{
    ViewData["Title"] = "Edit Dish";
}

<div class="container py-4">
    <h2>Edit Dish</h2>

    <form asp-action="EditDish" method="post">
        <input type="hidden" asp-for="Id" />

        <div class="mb-3">
            <label asp-for="DishName" class="form-label"></label>
            <input asp-for="DishName" class="form-control" />
        </div>

        <div class="mb-3">
            <label asp-for="Description" class="form-label"></label>
            <textarea asp-for="Description" class="form-control"></textarea>
        </div>

        <div class="mb-3">
            <label asp-for="Price" class="form-label"></label>
            <input asp-for="Price" type="number" step="0.01" class="form-control" />
        </div>

        <!-- Checkboxes with hidden fields -->
        <div class="form-check">
            <input asp-for="IsAvailable" class="form-check-input" type="checkbox" />
            <input type="hidden" asp-for="IsAvailable" value="false" />
            <label asp-for="IsAvailable" class="form-check-label"></label>
        </div>

        <div class="form-check">
            <input asp-for="IsVegan" class="form-check-input" type="checkbox" />
            <input type="hidden" asp-for="IsVegan" value="false" />
            <label asp-for="IsVegan" class="form-check-label"></label>
        </div>

        <div class="form-check">
            <input asp-for="HasNuts" class="form-check-input" type="checkbox" />
            <input type="hidden" asp-for="HasNuts" value="false" />
            <label asp-for="HasNuts" class="form-check-label"></label>
        </div>

        <div class="form-check">
            <input asp-for="HasEgg" class="form-check-input" type="checkbox" />
            <input type="hidden" asp-for="HasEgg" value="false" />
            <label asp-for="HasEgg" class="form-check-label"></label>
        </div>

        <div class="form-check">
            <input asp-for="HasDairy" class="form-check-input" type="checkbox" />
            <input type="hidden" asp-for="HasDairy" value="false" />
            <label asp-for="HasDairy" class="form-check-label"></label>
        </div>

        <div class="form-check">
            <input asp-for="IsSpicy" class="form-check-input" type="checkbox" />
            <input type="hidden" asp-for="IsSpicy" value="false" />
            <label asp-for="IsSpicy" class="form-check-label"></label>
        </div>

        <div class="form-check">
            <input asp-for="IsGlutenFree" class="form-check-input" type="checkbox" />
            <input type="hidden" asp-for="IsGlutenFree" value="false" />
            <label asp-for="IsGlutenFree" class="form-check-label"></label>
        </div>

        <button type="submit" class="btn btn-primary mt-3">Save Changes</button>
        <a asp-action="Index" class="btn btn-secondary mt-3">Cancel</a>
    </form>
</div>